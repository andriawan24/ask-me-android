<resources>
    <!-- Base application theme. -->
    <style name="Theme.AskMe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="Title2">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="Subtitle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="Body">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
    </style>
</resources>