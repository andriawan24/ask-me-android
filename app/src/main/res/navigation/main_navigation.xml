<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/customSplashFragment">

    <fragment
        android:id="@+id/customSplashFragment"
        android:name="com.andriawan.askme.features.splash.presenter.CustomSplashFragment"
        android:label="CustomSplashFragment" >
        <action
            android:id="@+id/action_customSplashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/customSplashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_customSplashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/customSplashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.andriawan.askme.features.onboarding.presenter.OnBoardingFragment"
        android:label="OnBoardingFragment" >
        <action
            android:id="@+id/action_onBoardingFragment_to_loginFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.andriawan.askme.features.login.presenter.LoginFragment"
        android:label="LoginFragment" />
</navigation>